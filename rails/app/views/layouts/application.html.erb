<html lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>OpenMBTA iPhone App</title>
    <% %w{ reset 960 text site }.each do |stylesheet| %>
      <%= stylesheet_link_tag "#{stylesheet}.css" %>
    <% end %>
  </head>
  <body>
    <div class="container_12">
      <div class="grid_7 prefix_1" id="main">
        <%= yield %>
      </div>
      <div class="grid_3 suffix_1">
        
        <div class="grid_3">
          <div class="sidebar">
            <h4>Navigation</h4>
            <ul>
              <li><%= link_to "Home", "/" %></li>
              <li><%= link_to "How to use it (iPhone app)", :controller => "home", :anchor => "how-to" %></li>
              <li><%= link_to "FAQ", :controller => "support" %></li>
              <li><%= link_to "Support & Feedback", :controller => "support" %></li>
              <li><%= link_to "Join the OpenMBTA project", :controller => "home", :anchor => "developers" %></li>
              <li><%= link_to "Goals for the next release", :controller => "home", :anchor => "next-release" %></li>
              <li><%= link_to "Source Code on GitHub", "http://github.com/danchoi/openmbta" %></li>
              <li><%= link_to "Google Group for Developers", "http://groups.google.com/group/openmbta" %></li>
              <li><%= link_to "Credits", :controller => "home", :anchor => "credits" %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
